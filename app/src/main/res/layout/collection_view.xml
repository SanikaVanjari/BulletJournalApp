<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/common_google_signin_btn_text_light"
    android:elevation="20dp"
    android:background="@drawable/common_google_signin_btn_text_dark_normal_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_data"
            android:textSize="30dp"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:id="@+id/collectionTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_data"
            android:textSize="20dp"
            style="@style/Base.TextAppearance.AppCompat.Display3"
            android:id="@+id/collectionContent"/>
    </LinearLayout>

</android.support.v7.widget.CardView>