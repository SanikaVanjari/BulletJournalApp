<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FutureLogActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/FrameCalander"
            android:layout_height="wrap_content">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/FrameCalander"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/NoteCardDay"
            android:layout_below="@id/ToDoPerDayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notePerDayTitle"
                    android:text="hi"
                    style="@style/Base.TextAppearance.AppCompat.Display2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/notePerDayContent"
                    android:text="By"
                    android:textSize="20sp"
                    android:layout_below="@id/notePerDayTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/ToDoPerDayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/ToDoDate"
                    style="@style/Base.TextAppearance.AppCompat.Display2"
                    android:text="te"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ToDoContent"
                    android:text="dy"
                    android:textSize="20sp"
                    android:layout_below="@id/ToDoDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </RelativeLayout>


</RelativeLayout>